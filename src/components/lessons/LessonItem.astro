---
import WatchIcon from "../../assets/icons/watch.svg"
const { lessonName, isDisabled, isPoshalka = false } = Astro.props
---

<li>
  <button class="lesson-btn" disabled={isDisabled} data-poshalka={isPoshalka}
    ><WatchIcon width={24} height={24} />{lessonName}</button
  >
</li>
<style scoped>
    .lesson-btn {
    color: var(--theme-text-harder);
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 0.7142857143em;
    font-size: 0.875rem;
    line-height: 1.3;
    font-weight: 400;
    text-align: left;
  }
  .lesson-btn:disabled {
    cursor: not-allowed;
  }

  .lesson-btn svg {
    color: var(--theme-text-harder);
    flex-shrink: 0;
  }
</style>
