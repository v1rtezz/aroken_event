      }

      if (askBtn) askBtn.disabled = true
      if (nextBtn) nextBtn.disabled = true

      await showSending()
      await showThinking()
      await typeText(HINTS[nextHintKey])

      shownHintKeys.push(nextHintKey)

      // Check if there are more hints available
      const remainingHints = availableHintKeys.filter(
        (key) => !shownHintKeys.includes(key),
      )

      if (remainingHints.length > 0) {
        if (nextBtn) {
          nextBtn.style.display = "block"
          nextBtn.disabled = false
        }
        if (askBtn) askBtn.style.display = "none"
      } else {
        if (askBtn) askBtn.disabled = true
        if (nextBtn) {
          nextBtn.disabled = true
          nextBtn.style.display = "none"
        }
        if (askBtn) askBtn.style.display = "block"
      }
    }

    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫
    askBtn.addEventListener("click", showHint)
    nextBtn.addEventListener("click", () => {
      showHint()
    })
  }

  // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initClaude)
  } else {
    initClaude()
  }

  // –ü–µ—Ä–µ–∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø–æ—Å–ª–µ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏ —Å ViewTransitions
  document.addEventListener("astro:page-load", initClaude)
</script>
