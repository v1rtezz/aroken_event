---
interface Props {
  img?: string;
  time?: string;
  text?: string;
}

const { img = "", time = "", text = "" } = Astro.props;
---

<div class="card">
  <div class="img">{img}</div>
  <p class="time">{time}</p>
  <p class="text">{text}</p>
</div>

<style scoped>
  p {
    margin-top: 0;
  }
  .card {
    padding: 15px;
    background-color: var(--bg-color);
    border-radius: 32px;
    text-align: center;
  }
  .img {
    font-size: 50px;
  }
  .time {
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 15px;
  }
  .text {
    font-size: 18px;
    font-weight: 500;
  }
</style>
